<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComputerList">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.navigation.NavigationView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:translationZ="5dp"
            android:background="#1765BE"
            android:paddingTop="5dp"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/returnMenuComputer"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Regresar"
                android:textColor="#fff"
                android:drawableLeft="@drawable/abc_vector_test"
                android:textSize="20dp"
                android:textAlignment="center"
                android:onClick="onClickComputer"
                />
        </com.google.android.material.navigation.NavigationView>
        <ScrollView
            android:layout_width="409dp"
            android:layout_height="729dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/computer_1" />
                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/computer_2" />
                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/computer_3" />
                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@mipmap/computer_4" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>